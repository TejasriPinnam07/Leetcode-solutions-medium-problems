class Solution {
public:
    int reverse(int x) {
        int revnum=0;
        int lastdig;
        while(x!=0){
         lastdig=x%10;
         if(revnum > INT_MAX/10 || (revnum == INT_MAX/10 && lastdig>7)){
            return 0;
         }
         if(revnum <INT_MIN/10 || (revnum==INT_MIN/10 && lastdig <-8)){
            return 0;
         }
         revnum=(revnum*10)+lastdig;
         x=x/10;
        }
        
       return revnum; 
    }
};
